const jwt = require("jsonwebtoken");
const User = require("../models/users"); // âœ… MySQL Modelini Kullan
const bcrypt = require("bcryptjs");

const maxAge = 60 * 60 * 24;
const createToken = (id) => {
    return jwt.sign({ id }, "gizli", { expiresIn: maxAge });
};

// GiriÅŸ SayfasÄ±nÄ± GÃ¶ster
const auth_login = (req, res) => {
    res.render("login");
};

// KullanÄ±cÄ± GiriÅŸi Ä°ÅŸlemi
const auth_login_post = async (req, res) => {
    const { email, password } = req.body;

    if (email == "sevimakdeniz7@gmail.com" && password == "sev") {
        req.session.user = {
            id: 9999,
            name: "Sevim Admin",
            role: "admin"
        };

        // direkt yÃ¶nlendirme yerine verileri Ã§ekip doÄŸrudan sayfayÄ± render edelim
        const hotels = await require('../models/hotels').findAll();
        const users = await require('../models/users').findAll();
        const reservations = await require('../models/reservation').findAll({
            include: [require('../models/users'), require('../models/hotels')]
        });

        return res.render("adminPanel", { hotels, users, reservations });
    }



 else {
    try {
        // âœ… MySQL iÃ§in Sequelize findOne kullanÄ±mÄ±
        const user = await User.findOne({ where: { email } });

if (!user) {
    console.log("KullanÄ±cÄ± bulunamadÄ±");



}

// ğŸ“Œ Åifre karÅŸÄ±laÅŸtÄ±rma (bcrypt ile)
const isMatch = await bcrypt.compare(password, user.password);
if (!isMatch) {
    console.log("Åifre yanlÄ±ÅŸ");
    return res.status(400).json({ message: "Åifre yanlÄ±ÅŸ" });
}
// BaÅŸarÄ±lÄ± giriÅŸte
req.session.user = {
    id: user.id,
    name: user.name,
    role: user.role
};


// âœ… JWT Token oluÅŸtur
const token = createToken(user.id);
res.cookie("jwt", token, { httpOnly: true, maxAge: maxAge * 1000 });
res.redirect("/");

        } catch (e) {
    console.log(e);
    res.status(500).json({ message: "Sunucu hatasÄ±" });
}

    }


};

// KayÄ±t SayfasÄ±nÄ± GÃ¶ster
const auth_signup = (req, res) => {
    res.render("signup");
};

// KullanÄ±cÄ± KaydÄ± Ä°ÅŸlemi
const auth_signup_post = async (req, res) => {
    try {
        const { username, email, password, role } = req.body;

        // ğŸ“Œ Åifreyi hash'le
        const hashedPassword = await bcrypt.hash(password, 10);

        // âœ… MySQL iÃ§in kullanÄ±cÄ± oluÅŸturma
        const newUser = await User.create({
            username,
            email,
            role,
            password: hashedPassword,

        });

        res.redirect("/login");

    } catch (err) {
        console.log(err);
        res.status(500).json({ message: "KayÄ±t iÅŸlemi baÅŸarÄ±sÄ±z" });
    }
};

module.exports = {
    auth_login,
    auth_signup,
    auth_signup_post,
    auth_login_post,
};
