const jwt = require("jsonwebtoken");
const User = require("../models/users"); // âœ… MySQL Modelini Kullan
const bcrypt = require("bcryptjs");
const { Op } = require("sequelize");

const maxAge = 60 * 60 * 24;
const createToken = (id) => {
    return jwt.sign({ id }, "gizli", { expiresIn: maxAge });
};

// GiriÅŸ SayfasÄ±nÄ± GÃ¶ster
const auth_login = (req, res) => {
    res.render("login");
};

// KullanÄ±cÄ± GiriÅŸi Ä°ÅŸlemi
const auth_login_post = async (req, res) => {
  const { email, password } = req.body;

  // Admin override
  if (email === "sevimakdeniz7@gmail.com" && password === "sev") {
    req.session.user = {
      id: 9999,
      name: "Sevim Admin",
      role: "admin"
    };
    req.session.userRole = "admin";
    return res.redirect("/admin");
  }

  try {
    const user = await User.findOne({ where: { email } });
    console.log("USER:", user); // Debug log

    // â›” null kontrolÃ¼
    if (!user || !user.id) {
      return res.render("login", { error_msg: "E-posta bulunamadÄ±." });
    }

    // ğŸ” Åifre kontrolÃ¼
    const isMatch = await bcrypt.compare(password, user.password);
    if (!isMatch) {
      return res.render("login", { error_msg: "Åifre yanlÄ±ÅŸ." });
    }

    // ğŸŸ¡ Pasif kullanÄ±cÄ± kontrolÃ¼
    if (!user.is_active) {
      return res.render("login", { error_msg: "HesabÄ±nÄ±z pasif." });
    }

    // âœ… Her ÅŸey doÄŸruysa session yaz
    const safeRole = user?.role || "customer";

    req.session.user = {
      id: user.id,
      name: user.username,
      role: safeRole
    };

    req.session.userRole = safeRole;

    const token = createToken(user.id);
    res.cookie("jwt", token, { httpOnly: true, maxAge: maxAge * 1000 });

    res.redirect("/");

  } catch (err) {
    console.error("ğŸ”¥ GiriÅŸ iÅŸlemi hatasÄ±:", err);
    res.status(500).render("login", { error_msg: "Sunucu hatasÄ±." });
  }
};





// KayÄ±t SayfasÄ±nÄ± GÃ¶ster
const auth_signup = (req, res) => {
    res.render("signup");
};



const auth_signup_post = async (req, res) => {
  try {
    const { username, email, password, role } = req.body;

    // ğŸ”’ Eksik bilgi kontrolÃ¼
    if (!username || !email || !password || !role) {
      return res.render("signup", { error_msg: "TÃ¼m alanlarÄ± doldurmalÄ±sÄ±nÄ±z." });
    }

    // ğŸ” KullanÄ±cÄ± adÄ± veya e-mail var mÄ± kontrol et
    const existingUser = await User.findOne({
      where: {
        [Op.or]: [
          { email },
          { username }
        ]
      }
    });

    if (existingUser) {
      const isEmailTaken = existingUser.email === email;
      const isUsernameTaken = existingUser.username === username;

      let msg = isEmailTaken ? "Bu e-posta zaten kayÄ±tlÄ±." :
                isUsernameTaken ? "Bu kullanÄ±cÄ± adÄ± zaten alÄ±nmÄ±ÅŸ." :
                "KullanÄ±cÄ± zaten mevcut.";

      return res.render("signup", { error_msg: msg });
    }

    // âœ… Åifreyi hashle
    const hashedPassword = await bcrypt.hash(password, 10);

    // âœ… KullanÄ±cÄ± oluÅŸtur
    await User.create({
      username,
      email,
      role,
      password: hashedPassword,
      is_active: true,
      resetCodeAttempts: 0
    });

    return res.redirect("/login");

  } catch (err) {
    console.error("âŒ KayÄ±t sÄ±rasÄ±nda hata:", err);
    return res.status(500).render("signup", { error_msg: "Sunucu hatasÄ±." });
  }
};
module.exports = {
    auth_login,
    auth_signup,
    auth_signup_post,
    auth_login_post,
};
