  <script>
  function showSection(id) {
    document.querySelectorAll('.section').forEach(div => div.style.display = 'none');
    const target = document.getElementById(id);
    if (target) {
      target.style.display = 'block';
      localStorage.setItem('activeSection', id);
    }
  }

  // Scroll pozisyonunu kaydet
  window.addEventListener('beforeunload', () => {
    localStorage.setItem('scrollPos', window.scrollY);
  });

  // Sayfa yÃ¼klenince scroll pozisyonunu ve aktif sekmeyi geri yÃ¼kle
  window.addEventListener('DOMContentLoaded', () => {
    const active = localStorage.getItem('activeSection') || 'users';
    showSection(active);

    const scrollPos = localStorage.getItem('scrollPos');
    if (scrollPos !== null) {
      window.scrollTo(0, parseInt(scrollPos));
    }

    // FormlarÄ± iÅŸle (users, hotels, reservations hepsi iÃ§in)
    document.querySelectorAll("form.delete-form").forEach(form => {
      form.addEventListener("submit", function (e) {
        e.preventDefault();

        const confirmed = confirm("Bu kaydÄ± silmek istediÄŸinize emin misiniz?");
        if (!confirmed) return;

        fetch(form.action, {
          method: 'POST'
        })
        .then(res => {
          if (res.ok) {
            const row = form.closest("tr");
            if (row) row.remove();
          } else {
            alert("Silme iÅŸlemi baÅŸarÄ±sÄ±z oldu.");
          }
        })
        .catch(err => {
          console.error("Silme hatasÄ±:", err);
          alert("Bir hata oluÅŸtu.");
        });
      });
    });
  });
</script>




