<h2>🏠 Otel Yönetimi</h2>
<table>
  <tr>
    <th>Ad</th><th>Konum</th><th>Fiyat</th><th>İşlem</th>
  </tr>
  <% hotels.forEach(hotel => { %>
    <tr>
      <td><%= hotel.name %></td>
      <td><%= hotel.location %></td>
      <td><%= hotel.price_per_night %></td>
      <td>
        <form action="/admin/delete-hotel/<%= hotel.id %>" method="POST">
          <button>🗑️</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
