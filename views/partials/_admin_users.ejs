<table>
  <tr>
    <th>Kullanıcı Adı</th>
    <th>Email</th>
    <th>Rol</th>
    <th>İşlem</th>
  </tr>
  <% users.forEach(user => { %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <form action="/admin/delete-user/<%= user.id %>" method="POST" style="display:inline">
          <button type="submit">🗑️</button>
        </form>
        <a href="/admin/edit-user/<%= user.id %>">
          <button type="button">✏️ Düzenle</button>
        </a>
      </td>
    </tr>
  <% }) %>
</table>
