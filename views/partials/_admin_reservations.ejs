<h2>📅 Rezervasyon Yönetimi</h2>
<table>
  <tr>
    <th>Kullanıcı</th><th>Otel</th><th>Tarih</th><th>İşlem</th>
  </tr>
  <% reservations.forEach(res => { %>
    <tr>
      <td><%= res.User ? res.User.username : "Bilinmiyor" %></td>
      <td><%= res.Hotel ? res.Hotel.name : "Bilinmiyor" %></td>
      <td><%= res.start_date %> - <%= res.end_date %></td>
      <td>
        <form action="/admin/delete-reservation/<%= res.id %>" method="POST">
          <button>❌ İptal Et</button>
        </form>
      </td>
    </tr>
  <% }) %>
</table>
